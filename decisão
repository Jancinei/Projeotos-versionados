total = 0
maior = 0
menor = 0
for l in range(1,8):
    consumo = eval(input(f'Digite a {l}ª leitura '))
    if l == 1:
        maior = consumo
        menor = consumo
    else:
        if consumo > maior:
            maior = consumo
        if consumo < menor:
            menor = consumo
    total+= consumo
print(f'A média de consumo da semana é {total /7 :.2f}')
print(f'O maior consumo é {maior}')
print(f'O menor consumo é {menor}')